<h2>情報の編集</h2>
<%= form_with model:@customer, url:customer_path(current_customer.id), local:true do |f| %>

  <div>
    <%= f.label :name, "氏名" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.text_field :telephone_number %>
  </div>
  <div>
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email %>
  </div>

  <%= f.submit "編集内容を保存", class: 'btn btn-primary' %>

<% end %>